{ // мінімальний набір хорошого тону в тайпскрипті)
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@modals": ["modals"],
      "@components": ["components"],
      "@page.object": ["pages"],
      "@fixtures": ["fixtures"],
      "@test.data": ["test.data"]
    }
  }
}
